<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.ColorNoLogo</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- <item name="windowContentOverlay">@drawable/ab_solid_shadow_holo</item> -->
    <style name="AppTheme.NoActionBar" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ActionBar.Solid.ColorNoLogo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/material_lightblue_500</item>
        <item name="android:displayOptions">showTitle</item>
    </style>
    

</resources>
