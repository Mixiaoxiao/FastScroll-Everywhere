<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mixiaoxiao.fastscroll.sample.MainActivity" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/button_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="RecyclerView"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/button_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ScrollView"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/button_webview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="WebView"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/button_listview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ListView"
                android:textSize="12dp" />
            <RadioButton
                android:id="@+id/button_gridview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="GridView"
                android:textSize="12dp" />
        </RadioGroup>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp" >

        <com.mixiaoxiao.fastscroll.FastScrollRecyclerView
            android:id="@+id/fastScrollRecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.mixiaoxiao.fastscroll.FastScrollRecyclerView>

        <com.mixiaoxiao.fastscroll.FastScrollScrollView
            android:id="@+id/fastScrollScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_pink_500"
                    android:gravity="center"
                    android:text="FastScrollScrollView"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_teal_500"
                    android:gravity="center"
                    android:text="Custom Thumb"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_yellow_500"
                    android:gravity="center"
                    android:text="Popup Indicator"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_pink_500"
                    android:gravity="center"
                    android:text="FastScrollScrollView"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_teal_500"
                    android:gravity="center"
                    android:text="Custom Thumb"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_yellow_500"
                    android:gravity="center"
                    android:text="Popup Indicator"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_pink_500"
                    android:gravity="center"
                    android:text="FastScrollScrollView"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_teal_500"
                    android:gravity="center"
                    android:text="Custom Thumb"
                    android:textColor="#ffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/material_yellow_500"
                    android:gravity="center"
                    android:text="Popup Indicator"
                    android:textColor="#ffff"
                    android:textSize="28dp" />
            </LinearLayout>
        </com.mixiaoxiao.fastscroll.FastScrollScrollView>

        <com.mixiaoxiao.fastscroll.FastScrollWebView
            android:id="@+id/fastScrollWebView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.mixiaoxiao.fastscroll.FastScrollListView
            android:id="@+id/fastScrollListView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >
        </com.mixiaoxiao.fastscroll.FastScrollListView>
        
        <com.mixiaoxiao.fastscroll.FastScrollGridView 
            android:id="@+id/fastScrollGridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:visibility="gone">
        </com.mixiaoxiao.fastscroll.FastScrollGridView>
    </FrameLayout>

</merge>